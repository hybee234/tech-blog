<main class="align-center">
    {{!-------------}}
    {{!-- Heading --}}
    {{!-------------}}
    <h1 class="flex items-center justify-center p-2 text-3xl font-semibold text-center md:text-4xl text-[#323232]">
        &nbsp;Sign up for more access &nbsp;
    </h1>

    {{!------------------}}
    {{!-- Sign Up Form --}}
    {{!------------------}}
    <div class="mx-auto w-11/12 max-w-2xl p-5">        
        <div class"justify-center w-full text-center">
            <form id="sign-up-form" class="m-auto my-5 border-4 border-[#323232] bg-[#dedbd4] rounded-xl max-w-3xl text-center">
                <h2 class="w-11/12 mx-auto block uppercase text-lg font-semibold md:text-2xl text-[#323232] bg-[#bab0a1] p-2 m-5 rounded-md"> Sign Up </h2>
                    <div class="w-full px-1 mx-auto my-2 justify-center">
                        <label class="w-5/6 mx-auto text-left block mb-2 text-xs font-bold tracking-wide text-[#323232] uppercase" for="sign-up-name"> Name: </label>
                        <input class="w-11/12 px-4 py-3 mb-0 leading-tight duration-200 ease-in-out bg-gray-200 border border-gray-200 appearance-none rounded-xl text-zinc-900 hover:border-zinc-500 focus:outline-none focus:border-zinc-500" id="sign-up-name" name="email" type="text" required placeholder="Full name">
                    </div>    
                    <div class="w-full px-1 mx-auto my-2 justify-center">
                        <label class="w-5/6 mx-auto text-left block mb-2 text-xs font-bold tracking-wide text-[#323232] uppercase" for="sign-up-email"> Email: </label>
                        <input class="w-11/12 px-4 py-3 mb-0 leading-tight duration-200 ease-in-out bg-gray-200 border border-gray-200 appearance-none rounded-xl text-zinc-900 hover:border-zinc-500 focus:outline-none focus:border-zinc-500" id="sign-up-email" name="email" type="text" required placeholder="Email...">
                    </div>
                    <div class="w-full px-1 mx-auto my-2">
                        <label class="w-5/6 mx-auto text-left block mb-2 text-xs font-bold tracking-wide text-[#323232] uppercase" for="sign-up-password"> Password </label>
                        <input class="w-11/12 px-4 py-3 mb-0 leading-tight duration-200 ease-in-out bg-gray-200 border border-gray-200 appearance-none rounded-xl text-zinc-900 hover:border-zinc-500 focus:outline-none focus:border-zinc-500" id="sign-up-password" name="password" type="password" required placeholder="Password... "></input>
                    </div>
                    <div class="w-full px-1 mx-auto my-2">
                        <label class="w-5/6 mx-auto text-left block mb-2 text-xs font-bold tracking-wide text-[#323232] uppercase" for="sign-up-repeat-password"> Repeat Password </label>
                        <input class="w-11/12 px-4 py-3 mb-0 leading-tight duration-200 ease-in-out bg-gray-200 border border-gray-200 appearance-none rounded-xl text-zinc-900 hover:border-zinc-500 focus:outline-none focus:border-zinc-500" id="sign-up-repeat-password" name="repeat-password" type="password" required placeholder="Password... "></input>
                    </div>
                <button id="create-account-button" class="px-6 py-2 my-5 font-bold duration-200 ease-in-out bg-[#323232] text-zinc-100 rounded-xl hover:bg-[#787878]" type="submit" value="submit"> <i class="fa-solid fa-user-plus"></i> &nbsp; Sign Up </button>
            </form>  
        </div>
    </div>

    {{!------------------------}}
    {{!-- Toast Notification --}}
    {{!------------------------}}
    <div class="toast-notification" style="display: none;"></div>

</main>

    {{!---------------------}}
    {{!-- Session Element --}}
    {{!---------------------}}

<div id="session-details" data-user-id="{{user_id}}" data-name="{{name}}" data-email="{{email}}" data-logged-in="{{logged_in}}" data-admin="{{admin}}" class="text-center"></div>

<script src="/js/signup.js"></script>