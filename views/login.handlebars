    {{!----------------}}
    <div class="mx-auto bg-sky-700 w-11/12 max-w-2xl">        
        <div class"justify-center text-center">
            <form id="login-form" class="w-full p-1 m-auto my-5 bg-sky-300 border-2 rounded-3xl text-center">
                <h2 class="block uppercase text-lg font-semibold md:text-2xl mt-5 text-center items-center justify-center"> Log In </h2>    
                {{!-- <div class="flex flex-wrap "> --}}
                    <div class="w-full px-1 mx-auto my-2 justify-center">
                        <label class="text-left  block mb-2 text-xs font-bold tracking-wide text-gray-700 uppercase" for="login-email"> Email: </label>
                        <input class="w-full px-4 py-3 mb-0 leading-tight duration-200 ease-in-out bg-gray-200 border border-gray-200 appearance-none rounded-xl text-zinc-900 hover:border-zinc-500 focus:outline-none focus:border-zinc-500" id="login-email" name="email" type="text" required placeholder="Email...">
                    </div>
                {{!-- </div> --}}
                {{!-- <div class="flex flex-wrap mx-1 my-2"> --}}
                    <div class="w-full px-1 mx-auto my-2">
                        <label class="text-left  block mb-2 text-xs font-bold tracking-wide text-gray-700 uppercase" for="login-password"> Password </label>
                        <input class="w-full px-4 py-3 mb-0 leading-tight duration-200 ease-in-out bg-gray-200 border border-gray-200 appearance-none rounded-xl text-zinc-900 hover:border-zinc-500 focus:outline-none focus:border-zinc-500" id="login-password" name="password" type="password" required placeholder="Password... "></input>
                    </div>
                {{!-- </div>               --}}
                {{!-- submit button --}}
                <button id="login-login-button" class="mx-auto px-4 py-2 my-3 font-bold duration-200 ease-in-out bg-blue-500 text-zinc-100 rounded-xl hover:bg-blue-700" type="submit" value="submit"> Log In </button>
                {{!-- cancel button --}}
                
            </form>  
        </div>
    </div>

