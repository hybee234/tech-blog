<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <title>Huber's Tech Blog</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover"/>
        <!--fontawesome icons-->
        <script src="https://kit.fontawesome.com/80af804818.js" crossorigin="anonymous"></script>                
        <link rel="stylesheet" href="/css/tailwind.css" />
        <link rel="stylesheet" href="/css/style.css" />
    </head>
    <body class="bg-sky-800">
        <!-- Navbar starts here -->
        <header class="bg-sky-800">
            <div class="px-4 py-6 mx-auto md:px-6 lg:px-8 xl:max-w-7xl 2xl:max-w-[1536px]">

                <!-- Container for navbar content -->
                <div class="flex flex-wrap items-center justify-between">

                    {{! Hamburger Icon }}
                    {{!-- <div class="hamburger">
                        <span class="bar"></span>
                        <span class="bar"></span>
                        <span class="bar"></span>
                    </div> --}}

                    <!-- Logo or brand name -->
                    <div class="w-full text-center md:w-3/5 md:text-left">
                        <a href="/" class="p-2 text-3xl font-bold text-center text-zinc-100 md:text-left md:text-3xl" >
                            Huber's 
                            <span class="text-orange-400">Tech Blog</span>
                        </a>
                    </div>

                    <!-- Navbar links list -->
                    <div class="w-full justify-center  md:w-2/5 md:justify-end flex">
                        <!-- HomePage link (Blog page) -->
                        <li class="nav-item">
                            <a href="/" class="p-2 text-lg font-medium duration-200 ease-in-out text-orange-400 hover:text-zinc-100">Homepage</a>
                        </li>

                        <!-- Dashboard link (User page) -->
                        <li class="nav-item">
                            <a href="/dashboard" class="p-2 text-lg font-medium duration-200 ease-in-out text-orange-400 hover:text-zinc-100">Dashboard</a>
                        </li>

                        <!-- Conditionally rendered links -->
                        {{#if logged_in}}

                        <li class="nav-item"></li>                            
                            <button id="logout-button" class="p-2 text-lg font-medium duration-200 ease-in-out text-orange-400 hover:text-zinc-100"><i class="fa-solid fa-right-from-bracket fa-lg hover:animate-pulse"></i></button>
                        </li>

                        {{else}}
                        <!-- Login/Sign Up link -->
                        <li class="nav-item">
                            <a href="/login" class="p-2 text-lg font-medium duration-200 ease-in-out text-orange-400 hover:text-zinc-100">Login/Sign Up</a>
                        </li>
                        {{/if}}
                    </div>
                </div>
                <p class="bg-blue-700 flex items-center justify-center p-1 text-center text-zinc-100">Log in as: {{name}}</p>
            </div>
        </header>

        {{{body}}}

        {{!-- <script src="/js/hamburgerMenu.js"></script> --}}
        {{#if logged_in}}
        {{!-- <script src="/js/profileDropdown.js"></script> --}}
        <script src="/js/main.js"></script>
        {{/if}}
    </body>
</html>